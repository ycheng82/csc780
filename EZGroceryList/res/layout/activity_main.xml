<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ezgrocerylist.activity.MainActivity" >

    <!-- TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" /-->

    <ImageButton
        android:id="@+id/SettingButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_setting_launcher" />

    <ImageButton
        android:id="@+id/ShoppingButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/SettingButton"
        android:layout_alignLeft="@+id/RecipeButton"
        android:layout_marginBottom="17dp"
        android:background="@drawable/ic_shopping_launcher" />

    <TextView
        android:id="@+id/PantryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RecipeButton"
        android:layout_alignLeft="@+id/ShoppingText"
        android:layout_marginBottom="13dp"
        android:text="My Pantry List"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/RecipeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/InforButton"
        android:layout_alignLeft="@+id/ShoppingText"
        android:layout_marginBottom="12dp"
        android:text="My Recipe List"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/InforButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_infor_launcher"
        android:onClick="showInfor" />

    <ImageButton
        android:id="@+id/PantryButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/SettingButton"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:background="@drawable/ic_pantry_launcher"
        android:onClick="showPantry" />

    <ImageButton
        android:id="@+id/RecipeButton"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_above="@+id/RecipeText"
        android:layout_alignLeft="@+id/PantryButton"
        android:layout_marginBottom="74dp"
        android:background="@drawable/ic_recipe_launcher" />

    <TextView
        android:id="@+id/ShoppingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ShoppingButton"
        android:layout_alignParentRight="true"
        android:text="My Shopping List"
        android:textSize="20sp" />

</RelativeLayout>