<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

	    <ImageButton
	        android:id="@+id/ibCamera"
	        android:layout_width="@dimen/ibCamera_width"
	        android:layout_height="@dimen/ibCamera_height"
	        android:layout_gravity="center"
	        android:layout_marginTop="50dp"
	        android:background="@drawable/ic_camera"/>
	
	    <TextView
	        android:id="@+id/lbRecipeName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
	        android:layout_gravity="center"
	        android:text="Your Recipe Name"
	        android:textColor="@color/recipename_text"
	        android:textSize="25sp" />

	    <EditText
	        android:id="@+id/etRecipeDes"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="20dp"
	        android:ems="10"
	        android:text="add introduction your to recipe here"
	        android:textColor="@color/recipename_add_text"
	        android:inputType="textMultiLine" >

	        <requestFocus />
	    </EditText>

	    <!-- Button
	        android:id="@+id/button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="40dp"
	        android:text="@string/button_delete" 
	        android:onClick="clickDelete"/-->

    </LinearLayout>

</FrameLayout>
